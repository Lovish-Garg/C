#include <stdio.h>

void reverse(int *ptr, int rev, int size);

int main(void)
{
  int n;

  printf("Input the size of the array: ");
  scanf("%d", &n);

  int arr[n];

  for (int i = 0; i < n; i++)
  {
    printf("\nInput data for %d element: ", i + 1);
    scanf("%d", &arr[i]);
  }

  int rev;
  do
  {
    printf("\nInput the numbers you want to reverse: ");
    scanf("%d", &rev);
  }
  while (rev > 0 && rev >= n);// taking input for numbers to be shifted

  reverse(arr, rev, n);// calling function that reverses n numbers

  printf("\n\nAfter reverse of %d elements : \n", rev);
  for (int i = 0; i < n; i++)
  {
    printf("At %d = %d\n", i, arr[i]);
  }
}

void reverse(int *ptr, int rev, int size)
{
  int arr[rev];
  for (int i = 0; i < rev; i++)// copying data of n numbers in other array
  {
     arr[i] = ptr[i];
  }
  for (int i = rev; i < size; i++)// shifting all numbers to starting 
  {
    ptr[i - rev] = ptr[i];
  }
  int k = 0;
  
  /*
   overwriting n numbers to right side of the array
  */
  for (int i = size - rev; i < size; i++)
  {
    ptr[i] = arr[k];
    k++;
  }
  
}
